{
  "name": "salesforce",
  "version": "1.0.0",
  "description": "Salesforce integration for Claude Desktop - Query, modify, and manage Salesforce data and metadata",
  "author": "Salesforce Extension Team",
  "license": "MIT",
  "icon": "data:image/svg+xml;base64,",
  "main": "dist/index.js",
  "configuration": {
    "type": "object",
    "properties": {
      "connectionType": {
        "type": "string",
        "title": "Connection Type",
        "description": "Authentication method for Salesforce",
        "enum": ["User_Password", "OAuth_2.0_Client_Credentials"],
        "default": "User_Password"
      },
      "instanceUrl": {
        "type": "string",
        "title": "Instance URL",
        "description": "Salesforce instance URL (e.g., https://login.salesforce.com or https://your-domain.my.salesforce.com)",
        "default": "https://login.salesforce.com"
      },
      "username": {
        "type": "string",
        "title": "Username",
        "description": "Salesforce username (for User_Password auth)"
      },
      "password": {
        "type": "string",
        "title": "Password",
        "description": "Salesforce password (for User_Password auth)",
        "secret": true
      },
      "securityToken": {
        "type": "string",
        "title": "Security Token",
        "description": "Salesforce security token (for User_Password auth)",
        "secret": true
      },
      "clientId": {
        "type": "string",
        "title": "Client ID",
        "description": "OAuth 2.0 Client ID (for OAuth_2.0_Client_Credentials auth)"
      },
      "clientSecret": {
        "type": "string",
        "title": "Client Secret",
        "description": "OAuth 2.0 Client Secret (for OAuth_2.0_Client_Credentials auth)",
        "secret": true
      },
      "apiVersion": {
        "type": "string",
        "title": "API Version",
        "description": "Salesforce API version",
        "default": "58.0"
      },
      "timeout": {
        "type": "number",
        "title": "Timeout (ms)",
        "description": "Request timeout in milliseconds",
        "default": 30000,
        "minimum": 5000,
        "maximum": 120000
      },
      "logLevel": {
        "type": "string",
        "title": "Log Level",
        "description": "Logging level for debugging",
        "enum": ["error", "warn", "info", "debug"],
        "default": "info"
      }
    },
    "required": []
  },
  "mcp": {
    "type": "stdio",
    "command": "node",
    "args": ["dist/index.js"]
  }
}