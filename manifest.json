{
  "dxt_version": "0.1",
  "name": "salesforce-desktop-extension",
  "display_name": "Salesforce",
  "version": "1.0.0",
  "description": "Salesforce integration for Claude Desktop - Query, modify, and manage Salesforce data and metadata",
  "author": {
    "name": "Salesforce Extension Team"
  },
  "license": "MIT",
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/dist/index.js"
      ],
      "env": {
        "SALESFORCE_CONNECTION_TYPE": "${user_config.connectionType}",
        "SALESFORCE_INSTANCE_URL": "${user_config.instanceUrl}",
        "SALESFORCE_USERNAME": "${user_config.username}",
        "SALESFORCE_PASSWORD": "${user_config.password}",
        "SALESFORCE_TOKEN": "${user_config.securityToken}",
        "SALESFORCE_CLIENT_ID": "${user_config.clientId}",
        "SALESFORCE_CLIENT_SECRET": "${user_config.clientSecret}",
        "SALESFORCE_API_VERSION": "${user_config.apiVersion}",
        "SALESFORCE_TIMEOUT": "${user_config.timeout}",
        "SALESFORCE_LOG_LEVEL": "${user_config.logLevel}"
      }
    }
  },
  "user_config": [
    {
      "name": "connectionType",
      "type": "select",
      "title": "Connection Type",
      "description": "Authentication method for Salesforce",
      "options": [
        {
          "label": "Username & Password",
          "value": "User_Password"
        },
        {
          "label": "OAuth 2.0 Client Credentials",
          "value": "OAuth_2.0_Client_Credentials"
        }
      ],
      "default": "User_Password",
      "required": true
    },
    {
      "name": "instanceUrl",
      "type": "string",
      "title": "Instance URL",
      "description": "Salesforce instance URL (e.g., https://login.salesforce.com or https://your-domain.my.salesforce.com)",
      "default": "https://login.salesforce.com",
      "required": true
    },
    {
      "name": "username",
      "type": "string",
      "title": "Username",
      "description": "Salesforce username (for User_Password auth)"
    },
    {
      "name": "password",
      "type": "string",
      "title": "Password",
      "description": "Salesforce password (for User_Password auth)",
      "sensitive": true
    },
    {
      "name": "securityToken",
      "type": "string",
      "title": "Security Token",
      "description": "Salesforce security token (for User_Password auth)",
      "sensitive": true
    },
    {
      "name": "clientId",
      "type": "string",
      "title": "Client ID",
      "description": "OAuth 2.0 Client ID (for OAuth_2.0_Client_Credentials auth)"
    },
    {
      "name": "clientSecret",
      "type": "string",
      "title": "Client Secret",
      "description": "OAuth 2.0 Client Secret (for OAuth_2.0_Client_Credentials auth)",
      "sensitive": true
    },
    {
      "name": "apiVersion",
      "type": "string",
      "title": "API Version",
      "description": "Salesforce API version",
      "default": "58.0"
    },
    {
      "name": "timeout",
      "type": "number",
      "title": "Timeout (ms)",
      "description": "Request timeout in milliseconds",
      "default": 30000
    },
    {
        "name": "logLevel",
        "type": "select",
        "title": "Log Level",
        "description": "Logging level for debugging",
        "options": [
            {"label": "Error", "value": "error"},
            {"label": "Warn", "value": "warn"},
            {"label": "Info", "value": "info"},
            {"label": "Debug", "value": "debug"}
        ],
        "default": "info"
    }
  ]
}